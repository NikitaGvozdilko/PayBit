<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#fff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:layout_gravity="center"
        android:gravity="center"
        >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <com.justimaginethat.gogodriver.ExtendedView.TextViewSegoePrintFont
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000"
            android:text="ENTER ORDER AMOUNT"
            android:textSize="15dp"
            android:gravity="center"
            />

    </LinearLayout>


    <View
        android:layout_width="fill_parent"
        android:layout_height="2.0dip"
        android:layout_marginBottom="24.0dip"
        android:layout_marginTop="15.0dip"
        android:background="#ff000000" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:weightSum="1"
        android:orientation="horizontal"
        android:gravity="left|center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        >
        <com.justimaginethat.gogodriver.ExtendedView.TextViewSegoePrintFont
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:text="$"
            android:textSize="30dp"
            android:textColor="#000"
            android:gravity="left|center"
            />
        <com.justimaginethat.gogodriver.ExtendedView.EditTextSegoePrintFont
            android:id="@+id/orderRate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:background="@android:color/transparent"
            android:layout_weight="0.80"
            android:text=""

            android:textSize="30dp"
            android:gravity="right|center"
            />

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2.0dip"
        android:layout_marginBottom="24.0dip"
        android:layout_marginTop="15.0dip"
        android:background="#ff000000" />

    <LinearLayout
        android:id="@+id/action_done"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:background="#000"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_right_white"
            />

    </LinearLayout>
</LinearLayout>