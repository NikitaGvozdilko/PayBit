<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1">
                <LinearLayout
                    android:id="@+id/linearMainPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:background="@drawable/text_border_black"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="15dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/linearAction_imageP"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.10"

                        >

                        <ImageView
                            android:id="@+id/imgArrow_down_P"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/arrow_down" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearAddressP"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.70"
                        android:paddingLeft="10dp"
                        android:gravity="center">

                        <com.justimaginethat.gogodriver.ExtendedView.TextViewSegoePrintFont
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left|center"
                            android:singleLine="true"
                            android:text="Primary Address"
                            android:textColor="#000"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.20">

                        <Switch
                            android:id="@+id/switch_Primary"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:theme="@style/Color1SwitchStyle"

                            />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_primary"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.40"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp"
                    >

                    <LinearLayout
                        
                        android:id="@+id/addressFieldP"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/text_border_green"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:weightSum="1">

                        <LinearLayout
                            android:id="@+id/linearGetAddressP"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.10"
                            android:gravity="center"
                            >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/icon_location_silver" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.90"
                            android:paddingLeft="15dp"
                            >

                            <com.justimaginethat.gogodriver.ExtendedView.EditTextSegoePrintFont
                                android:id="@+id/edtAddressFieldP"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:lines="4"
                                android:gravity="left|center"
                                android:hint="Address" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/addressHomeP"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.20"
                        android:background="@drawable/text_border_green"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.10"
                            android:layout_marginBottom="10dp"
                            >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/icon_home_silver" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.90"
                            android:paddingLeft="15dp"
                            >

                            <com.justimaginethat.gogodriver.ExtendedView.EditTextSegoePrintFont
                                android:id="@+id/edtBuildingNumberP"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left|center"
                                android:hint="Building Name" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/addressFloorP"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.20"
                        android:background="@drawable/text_border_green"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.10"
                            android:layout_marginBottom="10dp"
                            >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/icon_floor_silver" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.90"
                            android:paddingLeft="15dp"
                            >

                            <com.justimaginethat.gogodriver.ExtendedView.EditTextSegoePrintFont
                                android:id="@+id/edtFloorNumberP"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left|center"
                                android:hint="Floor Number" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearMainSecondary"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:background="@drawable/text_border_black"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/linearAction_imageS"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.10">

                        <ImageView
                            android:id="@+id/imgArrow_down_S"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/arrow_up" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linearAddressS"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.70"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        >

                        <com.justimaginethat.gogodriver.ExtendedView.TextViewSegoePrintFont
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left|center"
                            android:text="Secondary Address"
                            android:singleLine="true"
                            android:textColor="#000"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.20">

                        <Switch
                            android:id="@+id/switch_Secondary"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:theme="@style/Color1SwitchStyle"
                            />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_secondary"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.40"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp"
                    android:weightSum="1">


                    <LinearLayout
                        android:id="@+id/addressFieldS"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_weight="0.30"
                        android:background="@drawable/text_border_green"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:weightSum="1">

                        <LinearLayout
                            android:id="@+id/linearGetAddressS"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.10"
                            android:gravity="center"
                            >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/icon_location_silver" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:paddingLeft="15dp"
                            android:layout_weight="0.90">

                            <com.justimaginethat.gogodriver.ExtendedView.EditTextSegoePrintFont
                                android:id="@+id/edtAddressFieldS"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:lines="4"
                                android:gravity="left|center"
                                android:hint="Address" />
                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/addressHomeS"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.20"
                        android:background="@drawable/text_border_green"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:weightSum="1">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.10"
                            android:layout_marginBottom="10dp"
                            >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/icon_home_silver" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.90"
                            android:paddingLeft="15dp"
                            >

                            <com.justimaginethat.gogodriver.ExtendedView.EditTextSegoePrintFont
                                android:id="@+id/edtBuildingNumberS"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left|center"
                                android:hint="Building Name" />
                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/addressFloorS"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.20"
                        android:background="@drawable/text_border_green"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:weightSum="1">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.10"
                            android:layout_marginBottom="10dp"
                            >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/icon_floor_silver" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.90"
                            android:paddingLeft="15dp"
                            >

                            <com.justimaginethat.gogodriver.ExtendedView.EditTextSegoePrintFont
                                android:id="@+id/edtFloorNumberS"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="left|center"
                                android:hint="Floor Number" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</FrameLayout>