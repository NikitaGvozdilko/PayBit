<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_centerVertical="true"
        android:background="#e1e1e1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/luser"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#e1e1e1"
                android:orientation="horizontal">

                <com.justimaginethat.gogodriver.ExtendedView.TextViewSegoePrintFont

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000"
                    android:layout_marginLeft="@dimen/padding_10dp"
                    android:background="#00000000"
                    android:hint="Add a Place"
                    android:text="Add a Place"
                    android:gravity="center|center_vertical"
                    android:layout_gravity="center"
                    android:textSize="17dp"

                    tools:text="Add a Place" />


            </LinearLayout>

            <View
                android:background="@color/text_shadow_white"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/suggestedplace"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#e1e1e1"
                android:orientation="horizontal">

                <ImageView
                    android:tint="@color/greys"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_weight="0.1"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_location_city" />

                <com.justimaginethat.gogodriver.ExtendedView.EditTextSegoePrintFont
                    android:id="@+id/s_place"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:background="#00000000"
                    android:hint="Suggest Place"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/padding_10dp"
                    android:textColor="#000"

                    android:textSize="15dp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:orientation="horizontal"
                android:text="Submit"
                android:textColor="@color/white">

                <com.justimaginethat.gogodriver.ExtendedView.ButtonLogin
                    android:id="@+id/btnsubmit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    >


                </com.justimaginethat.gogodriver.ExtendedView.ButtonLogin>
                <TextView
                    android:id="@+id/txtLoginText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Submit"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="18dp"

                    />

            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>