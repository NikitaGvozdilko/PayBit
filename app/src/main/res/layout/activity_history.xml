<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:layout_weight="0.20"
        android:weightSum="1"
        android:orientation="vertical"
        >
        <com.justimaginethat.gogodriver.ExtendedView.TextViewSegoePrintFont
            android:id="@+id/txtHistoryTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="Your Recent Orders"
            android:textSize="20dp"
            android:layout_weight="0.70"
            android:textColor="#fff"
            />
        <com.justimaginethat.gogodriver.ExtendedView.TextViewSegoePrintFont
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="Date"
            android:textSize="15dp"
            android:textColor="#fff"
            android:layout_weight="0.30"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        android:layout_weight="0.60"
        >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recList"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
        <TextView
            android:id="@+id/empty_view"
            android:foregroundGravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:text="No data found." />
    </RelativeLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.20"
    android:weightSum="1"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_weight="0.30"
        android:gravity="center"
        >
        <LinearLayout
            android:id="@+id/btnLeft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="0.50"
            android:layout_marginRight="25dp"

            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:textColor="#fff"
                android:background="@drawable/whit_left"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnRight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:textColor="#fff"
                android:background="@drawable/whit_right"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="0.70"
        >
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/icon_add_button"
            android:textColor="#fff"
            />
    </LinearLayout>



</LinearLayout>
</LinearLayout>
